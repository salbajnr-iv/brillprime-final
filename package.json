  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "dev:web": "cd client && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "build": "npm run build:web && npm run build:server",
    "build:web": "cd client && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "build:server": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --external:pg-native",
    "start": "NODE_ENV=production tsx server/index.ts",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "check:db": "node -e \"require('pg').Pool({connectionString:process.env.DATABASE_URL}).query('SELECT 1').then(()=>console.log('✅ Database connected')).catch(e=>{console.error('❌ Database error:',e.message);process.exit(1)})\"",
    "db:push": "drizzle-kit push",
    "deploy": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "install:all": "npm install && cd client && npm install && cd .. && cd mobile && npm install && cd .."
  },
